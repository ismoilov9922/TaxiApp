<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">


    <RelativeLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/rounded_full_themecolored_corners">

        <RelativeLayout
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:id="@+id/rel_timeLay"
                android:layout_marginLeft="@dimen/_6sdp"
                android:background="@drawable/rounded_full_white">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sTime_infoWindow"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_7sdp"
                        android:text="8"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="gone"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:text="MIN"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="@dimen/_45sdp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_toRightOf="@+id/rel_timeLay">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:id="@+id/sAddress_marker"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
            <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:rotation="180"
                    android:layout_centerInParent="true"
                    android:background="@drawable/back_icon_white"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>